<UserControl x:Class="FleetAutomate.View.Controls.XPathInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             x:Name="Root">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- XPath TextBox -->
        <TextBox x:Name="XPathTextBox"
                 Grid.Column="0"
                 Text="{Binding ElementName=Root, Path=XPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 MinHeight="60"
                 Padding="8"
                 VerticalScrollBarVisibility="Auto"/>

        <!-- Capture Button -->
        <ui:Button x:Name="CaptureButton"
                   Grid.Column="1"
                   Content="Capture Element"
                   Icon="{ui:SymbolIcon Target20}"
                   Click="CaptureButton_Click"
                   Margin="10,0,0,0"
                   MinWidth="140"
                   Height="32"
                   VerticalAlignment="Top"/>
    </Grid>
</UserControl>
