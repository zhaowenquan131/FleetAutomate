<ui:FluentWindow x:Class="FleetAutomate.Dialogs.ElementCaptureDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        Title="Capture UI Element"
        Height="500"
        Width="600"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="False"
        Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <ui:TitleBar Grid.Row="0"
                    Title="Capture UI Element"
                    Icon="{ui:SymbolIcon Target20}"/>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
            <StackPanel>
                <!-- Capture Control -->
                <Border Background="#E3F2FD" Padding="12" CornerRadius="4" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Name="CaptureStatusText"
                                  Text="Click 'Start Capture' to begin capturing UI elements."
                                  FontSize="11"
                                  Foreground="#1565C0"
                                  TextWrapping="Wrap"
                                  Margin="0,0,0,10"/>
                        <ui:Button Name="StartStopButton"
                                  Content="Start Capture"
                                  Icon="{ui:SymbolIcon Play20}"
                                  Appearance="Primary"
                                  Click="StartStopButton_Click"
                                  HorizontalAlignment="Left"/>
                    </StackPanel>
                </Border>

                <!-- Element Properties -->
                <TextBlock Text="Element Information" FontWeight="Bold" FontSize="13" Margin="0,0,0,10"/>

                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Control Type -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Type:" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Name="ControlTypeTextBlock" Text="..." Foreground="Gray" Margin="10,0,0,5"/>

                    <!-- Name -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Name:" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Name="NameTextBlock" Text="..." Foreground="Gray" Margin="10,0,0,5" TextWrapping="Wrap"/>

                    <!-- AutomationId -->
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Automation ID:" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" Name="AutomationIdTextBlock" Text="..." Foreground="Gray" Margin="10,0,0,5" TextWrapping="Wrap"/>

                    <!-- ClassName -->
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Class:" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    <TextBlock Grid.Row="3" Grid.Column="1" Name="ClassNameTextBlock" Text="..." Foreground="Gray" Margin="10,0,0,0" TextWrapping="Wrap"/>
                </Grid>

                <!-- XPath Section -->
                <TextBlock Text="Generated XPath" FontWeight="Bold" FontSize="13" Margin="0,15,0,10"/>

                <TextBox Name="XPathTextBox"
                        Padding="10"
                        MinHeight="80"
                        TextWrapping="Wrap"
                        VerticalScrollBarVisibility="Auto"
                        IsReadOnly="True"
                        Background="#F5F5F5"
                        Foreground="Black"
                        FontFamily="Courier New"
                        FontSize="11"
                        Margin="0,0,0,10"/>

                <TextBlock Text="Tip: This XPath is optimized for readability and uses stable identifiers (Name, AutomationId, or ClassName)."
                          FontSize="10"
                          Foreground="Gray"
                          Margin="0,0,0,15"
                          TextWrapping="Wrap"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <Border Grid.Row="2" Background="#F5F5F5" Padding="20" BorderBrush="LightGray" BorderThickness="0,1">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <ui:Button Name="CopyButton"
                          Content="Copy XPath"
                          Icon="{ui:SymbolIcon Copy20}"
                          Click="CopyButton_Click"
                          Margin="0,0,10,0"/>
                <ui:Button Name="UseButton"
                          Content="Use in If Condition"
                          Appearance="Primary"
                          Click="UseButton_Click"
                          Margin="0,0,10,0"/>
                <ui:Button Name="CloseButton"
                          Content="Close"
                          Click="CloseButton_Click"
                          IsCancel="True"/>
            </StackPanel>
        </Border>
    </Grid>
</ui:FluentWindow>
