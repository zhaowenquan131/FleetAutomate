<ui:FluentWindow x:Class="FleetAutomate.Dialogs.IfActionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        Title="Create If Action"
        Height="500"
        Width="500"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <ui:TitleBar Grid.Row="0"
                    Title="Create If Action"
                    Icon="{ui:SymbolIcon Filter20}"/>

        <!-- Content -->
        <StackPanel Grid.Row="1" Margin="20" VerticalAlignment="Top">
            <!-- Condition Type Selector -->
            <TextBlock Text="Condition Type" FontWeight="Bold" FontSize="12" Margin="0,0,0,5"/>
            <ComboBox Name="ConditionTypeComboBox"
                     Margin="0,0,0,15"
                     SelectionChanged="ConditionTypeComboBox_SelectionChanged">
                <ComboBoxItem Content="Normal Expression" IsSelected="True" Tag="Expression"/>
                <ComboBoxItem Content="UIElement Exists" Tag="UIElementExists"/>
            </ComboBox>

            <!-- Normal Expression Panel -->
            <StackPanel Name="ExpressionPanel" Visibility="Visible">
                <TextBlock Text="Condition (Boolean Expression)" FontWeight="Bold" FontSize="12" Margin="0,0,0,5"/>
                <TextBox Name="ConditionTextBox"
                        Padding="8"
                        Margin="0,0,0,10"
                        Height="40"
                        TextWrapping="Wrap"
                        AcceptsReturn="False"
                        ToolTip="Enter a boolean expression (e.g., '5 > 3', 'true', 'false', 'x >= y')"/>
                <TextBlock Text="Examples: 5 > 3, 10 >= 5, true, false"
                          FontSize="10"
                          Foreground="Gray"
                          Margin="0,0,0,10"/>
            </StackPanel>

            <!-- UIElement Exists Panel -->
            <StackPanel Name="UIElementPanel" Visibility="Collapsed">
                <TextBlock Text="Element Identifier Type" FontWeight="Bold" FontSize="12" Margin="0,0,0,5"/>
                <ComboBox Name="IdentifierTypeComboBox" Margin="0,0,0,10">
                    <ComboBoxItem Content="XPath" IsSelected="True"/>
                    <ComboBoxItem Content="AutomationId"/>
                    <ComboBoxItem Content="Name"/>
                    <ComboBoxItem Content="ClassName"/>
                </ComboBox>

                <TextBlock Text="Element Identifier" FontWeight="Bold" FontSize="12" Margin="0,0,0,5"/>
                <TextBox Name="ElementIdentifierTextBox"
                        Padding="8"
                        Margin="0,0,0,10"
                        Height="60"
                        TextWrapping="Wrap"
                        AcceptsReturn="True"
                        VerticalScrollBarVisibility="Auto"
                        ToolTip="Enter the element identifier (e.g., XPath, AutomationId, Name, or ClassName)"/>
                <TextBlock Text="Example: //Window[@Name=&quot;MyWindow&quot;]//Button[@Name=&quot;Close&quot;]"
                          FontSize="10"
                          Foreground="Gray"
                          Margin="0,0,0,10"/>

                <TextBlock Text="Retry Times (default: 1)" FontWeight="Bold" FontSize="12" Margin="0,0,0,5"/>
                <TextBox Name="RetryTimesTextBox"
                        Padding="8"
                        Margin="0,0,0,5"
                        Height="30"
                        Text="1"
                        ToolTip="Number of times to retry finding the element before returning false"/>
                <TextBlock Text="Number of attempts to find the element. Each retry waits based on the timeout interval."
                          FontSize="10"
                          Foreground="Gray"
                          Margin="0,0,0,10"/>
            </StackPanel>

            <!-- Error Message -->
            <TextBlock Name="ErrorTextBlock"
                      Text=""
                      FontSize="10"
                      Foreground="Red"
                      Margin="0,0,0,10"
                      TextWrapping="Wrap"
                      Visibility="Collapsed"/>
        </StackPanel>

        <!-- Buttons -->
        <Border Grid.Row="2" Background="#F5F5F5" Padding="20" BorderBrush="LightGray" BorderThickness="0,1">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <ui:Button Name="OkButton"
                          Content="Create"
                          Appearance="Primary"
                          Click="OkButton_Click"
                          Padding="20,0"
                          Margin="0,0,10,0"/>
                <ui:Button Name="CancelButton"
                          Content="Cancel"
                          Click="CancelButton_Click"
                          Padding="20,0"
                          IsCancel="True"/>
            </StackPanel>
        </Border>
    </Grid>
</ui:FluentWindow>
